{
  "compilerOptions": {
    // Type Checking
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "strictNullChecks": true,
    "types": ["vitest/importMeta"],
    "paths": { "src/*": ["./src/*"], "~*": ["./src/*"] },
    "baseUrl": ".",
    // Completeness
    "skipLibCheck": true,
    "incremental": true
  },
  "include": [
    ".plasmo/index.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.cjs",
    "**/*.mjs",
    ".prettierrc.mjs",
    ".eslint.config.mjs"
  ],
  "exclude": ["dist", "build", "node_modules"],
  "extends": "plasmo/templates/tsconfig.base"
}
